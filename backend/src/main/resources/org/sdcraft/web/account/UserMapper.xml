<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sdcraft.web.account.utils.sql.UserMapper">
    <resultMap id="user" type="org.sdcraft.web.account.utils.sql.User">
        <result column="UUID" property="uuid"/>
        <result column="Email" property="email"/>
        <result column="Username" property="username"/>
        <result column="Permission" property="permissionLevel"/>
        <result column="Password" property="passwordEncrypted"/>
        <result column="EmailVerify" property="activeStatus"/>
        <result column="createdAt" property="createTime"/>
        <result column="updatedAt" property="updateTime"/>
    </resultMap>
    <!--<select id="findByUUID" parameterType="string" resultMap="user">
        SELECT * FROM ${@org.sdcraft.web.account.utils.Config@JDBC().DataBase.getTablePrefix()}users WHERE UUID=#{uuid}
    </select>
    <select id="findByEmail" parameterType="string" resultMap="user">
        SELECT * FROM ${@org.sdcraft.web.account.utils.Config@JDBC.DataBase.getTablePrefix()}users WHERE Email=#{email}
    </select>-->
    <insert id="insert" parameterType="org.sdcraft.web.account.utils.sql.User">
        INSERT INTO ${@org.sdcraft.web.account.utils.Config@INSTANCE.getDBPrefix()}users(`UUID`,`Email`,`Username`,`Permission`,`Password`,`EmailVerify`,`createdAt`,`updatedAt`) VALUES ("${uuid}","${email}","${username}","${permissionLevel}","${passwordEncrypted}","${activeStatus}","${createTime}","${updateTime}")
    </insert>
</mapper>